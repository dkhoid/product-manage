mixin alert-success(time)
    - if(messages.success)
        .message.info
            div(class="alert alert-success"
                show-alert
                data-timeout=time
            ) #{messages.success} <span close-alert> &times; </span>

mixin alert-error(time)
    - if(messages.error)
        .message.info
            div(class="alert alert-danger"
                show-alert
                data-timeout=time
            ) #{messages.error} <span close-alert> &times; </span>









