extends ../../layouts/default

block main
    h1(class='mb-4') Thêm mới danh mục sản phẩm
    form(action=`${prefixAdmin}/product-category/create`
        id = "form-create-product-category"
        method="POST",
    )
        div(class="from-group")
            label(for="title") Tên danh mục
            input(type="text" class="form-control" id="title" name="categoryName" required)
        div(class="from-group")
            button(type="submit" class="btn btn-primary") Thêm mới


