extends ../../layouts/default
include ../../components/alert

block main
    +alert-error(5000)
    h1(class='mb-4') Thêm mới danh mục sản phẩm
    form(action=`${prefixAdmin}/products/create`
        id = "form-create-product-category"
        method="POST",
        enctype="multipart/form-data"
    )
        div(class="from-group")
            label(for="title") Tên danh mục
            input(type="text" class="form-control" id="title" name="title" required)

        div(class="from-group")
            label(for="desc") Mô tả danh mục
            textarea(class="form-control textarea-mce" id="desc" name="description" rows="5")

        div(class="from-group" upload-image)
            label(for="thumbnail") Hình ảnh
            input(type="file" class="form-control-file" id="thumbnail" name="thumbnail" accept="image/*" upload-image-input)
            img(src="" upload-image-preview class="mt-2")

        div(class="from-group")
            button(type="submit" class="btn btn-primary") Thêm mới


