extends ../../layouts/default

block main
    h1(class='mb-4') Chi tiết danh mục sản phẩm !{categoryName}

    table(class=`table table-hover table-sm` checkbox-multi)
        thead
            tr
                th STT
                th Tên sản phẩm
                th Hình ảnh
                th Giá
                th Trạng thái

        tbody
            each product, index in products
                tr
                    td= index + 1

                    td= product.title
                    td
                        img(src=product.thumbnail, alt=product.title, width=60)
                    td= product.price + `$`
                    td
                        if(product.status === 'Active')
                            a(class="badge badge-success" data-id = product._id data-status = product.status href = `javascript:;` button-change-status) Hoạt động
                        else
                            a(class="badge badge-danger" href = `javascript:;` data-id = product._id data-status = product.status button-change-status) Ngừng hoạt động

