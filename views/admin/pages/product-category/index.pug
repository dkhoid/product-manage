extends ../../layouts/default
include ../../components/alert
block main
    h3 Danh mục sản phẩm
    +alert-success(3000)
    .card.mb-3
        .card-header Danh mục sản phẩm
            .card-body
                .row
                    .col-4
                        a.btn.btn-outline-primary(href=`${prefixAdmin}/product-category/create`) Thêm danh mục mới
                    .col-8
                        a.btn.btn-outline-primary(href=`${prefixAdmin}/product-category/add`) Thêm danh mục cho sản phẩm
                    table(class=`table table-hover table-sm` checkbox-multi)
                        thead
                            tr
                                th STT
                                th Tên danh mục
                                th Số lượng sản phẩm
                                th Hành động

                        tbody
                             each category, index in categories
                                 tr
                                     td= index + 1
                                     td= category.categoryName
                                     td= category.productCount
                                     td
                                         a.btn.btn-info.btn-sm.ml-1(href=`/admin/product-category/detail/${category.categoryName}`) Xem
                                         a.btn.btn-warning.btn-sm.ml-1(href=`/admin/product-categories/edit/${category.categoryName}`) Sửa
                                         a.btn.btn-danger.btn-sm.ml-1(button-delete data-id = category.categoryName) Xóa


    form(action="" method="POST" id='form-delete' data-path=`${prefixAdmin}/product-category/delete`)

