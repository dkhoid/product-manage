extends ../../layouts/default.pug


block main
    h3 Danh sách sản phẩm
    .card.mb-3
        .card-header Bộ lọc và tìm kiếm
        .card-body
            each item in filterStatus
                button(class=`btn btn-sm ml-1 btn-outline-success ${item.class}` button-status=item.status) #{item.name}


    table.table.table-hover.table-sm
        thead
            tr
                th STT
                th Hình ảnh
                th Tên sản phẩm
                th Giá
                th Trạng thái
                th Hành động

        tbody
            each product, index in products
                tr
                    td= index + 1
                    td
                        img(src=product.thumbnail, alt=product.title, width=60)

                    td= product.title
                    td= product.price + `$`
                    td
                        if(product.status === 'Active')
                            a.badge.badge-success Hoạt động
                        else
                            a.badge.badge-danger Ngừng hoạt động
                    td
                        a.btn.btn-warning.btn-sm(href=`/admin/products/${product._id}/edit`) Sửa
                        a.btn.btn-danger.btn-sm.ml-1(href=`/admin/products/${product._id}/delete`) Xóa


