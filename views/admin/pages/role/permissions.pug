extends ../../layouts/default

block main
    h1(class='mb-4') Phân quyền

    div(class='text-right mb-3')
        button(type='submit' class='btn btn-primary mb-3 button-submit-permission') Cập nhật phân quyền

    table(class='table table-hover table-sm')
        thead
            tr
                th Tính năng
                th(class='text-center') Quản trị viên
                th(class='text-center') Quản lý nội dung
        tbody
            tr
                td
                    b Danh mục sản phẩm
            tr(data-name='products-category_view')
                td Xem danh mục sản phẩm
                td(class='text-center')
                    input(type='checkbox' name='products-category_view_admin')
                td(class='text-center')
                    input(type='checkbox' name='products-category_view_content')

            tr(data-name='products-category_create')
                td Tạo danh mục sản phẩm
                td(class='text-center')
                    input(type='checkbox' name='products-category_create_admin')
                td(class='text-center')
                    input(type='checkbox' name='products-category_create_content')

            tr(data-name='products-category_edit')
                td Sửa danh mục sản phẩm
                td(class='text-center')
                    input(type='checkbox' name='products-category_edit_admin')
                td(class='text-center')
                    input(type='checkbox' name='products-category_edit_content')

            tr(data-name='products-category_delete')
                td Xóa danh mục sản phẩm
                td(class='text-center')
                    input(type='checkbox' name='products-category_delete_admin')
                td(class='text-center')
                    input(type='checkbox' name='products-category_delete_content')
