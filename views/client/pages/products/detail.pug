extends ../../layouts/default

block main
    .container.my-3
        .row
            .col-12
                if(product.title)
                    h1(class='mb-4')= product.title

                if(product.price)
                    div(class='mb-4')
                        strong Giá:
                        span= ' ' + product.price + `$`

                if(product.discount)
                    div(class='mb-4')
                        strong Giảm giá:
                        span= ' ' + product.discount + `%`

                if(product.stock)
                    div(class='mb-4')
                        strong Số lượng:
                        span= ' ' + product.stock

                if(product.description)
                    div(class='mb-4')
                        strong Mô tả:
                        span= ' ' + product.description

                if(product.thumbnail)
                    div(class='mb-4')
                        img(src=product.thumbnail, alt=product.title, width=200)

                if(product.status)
                    div(class='mb-4')
                        strong Trạng thái:
                        if(product.status === 'Active')
                            span(class="badge badge-success") Hoạt động
                        else
                            span(class="badge badge-danger") Ngừng hoạt động