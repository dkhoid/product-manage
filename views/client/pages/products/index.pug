extends ../../layouts/default
include ../../mixins/box-head

block main 
    .container.my-3
        .row
            .col-12
                +box-head('Danh sách sản phẩm')

        .row
            each item in products
                .col-3.mb-3
                    .product-item
                        .inner-image
                            img(src=item.images[0], alt=item.title)
                        .inner-content
                            h5.product-title #{item.title}
                            p.product-price #{item.price}
                            p.product-newPrice #{item.newPrice}
                            p.product-discount  #{item.discountPercentage}%


